{
    "env": {
        "browser": true,
        "es2021": true,
        "jest": true
    },
    "extends": "eslint:recommended",
    "parserOptions": {
        "ecmaVersion": "latest",
        "sourceType": "module"
    },
    "rules": {
        "no-console": ["warn", { "allow": ["warn", "error"] }],
        "semi": ["error", "always"],
        "quotes": ["error", "single"],
        "eqeqeq": "error",
        "curly": "error"
    }
}
